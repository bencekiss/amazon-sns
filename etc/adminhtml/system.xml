<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="amazon_sns" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="0" showInStore="0">
            <class>separator-top</class>
            <label>Amazon SNS</label>
            <tab>shopgo</tab>
            <resource>ShopGo_AmazonSns::config_amazon_sns</resource>
            <group id="general" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General</label>
                <field id="version" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Version</label>
                </field>
                <field id="region" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Region</label>
                    <source_model>ShopGo\AmazonSns\Model\System\Config\Source\Region</source_model>
                </field>
                <field id="protocol" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Protocol</label>
                    <source_model>ShopGo\AmazonSns\Model\System\Config\Source\Protocol</source_model>
                </field>
                <field id="topic-arn" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Topic ARN</label>
                </field>
            </group>
            <group id="credentials" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Credentials</label>
                <field id="aws_key" translate="label" type="obscure" sortOrder="0" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>AWS Key</label>
                </field>
                <field id="aws_secret" translate="label" type="obscure" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>AWS Secret</label>
                </field>
            </group>
        </section>
    </system>
</config>
