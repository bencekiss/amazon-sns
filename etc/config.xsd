<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="amazon_sns">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="general"/>
                <xs:element ref="credentials"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="general">
        <xs:complexType>
            <xs:sequence>
                <xs:choice minOccurs="0" maxOccurs="1">
                    <xs:element ref="version"/>
                    <xs:element ref="region"/>
                    <xs:element ref="protocol"/>
                    <xs:element ref="topic_arn"/>
                </xs:choice>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="version">
        <xs:annotation>
            <xs:documentation>
                Version Resource. Recursive complex type
            </xs:documentation>
        </xs:annotation>
    </xs:element>

    <xs:element name="region">
        <xs:annotation>
            <xs:documentation>
                Region Resource. Recursive complex type
            </xs:documentation>
        </xs:annotation>
    </xs:element>

    <xs:element name="protocol">
        <xs:annotation>
            <xs:documentation>
                Protocol Resource. Recursive complex type
            </xs:documentation>
        </xs:annotation>
    </xs:element>

    <xs:element name="topic_arn">
        <xs:annotation>
            <xs:documentation>
                Topic ARN Resource. Recursive complex type
            </xs:documentation>
        </xs:annotation>
    </xs:element>

    <xs:element name="credentials">
        <xs:complexType>
            <xs:sequence>
                <xs:choice minOccurs="0" maxOccurs="1">
                    <xs:element ref="aws_key"/>
                    <xs:element ref="aws_secret"/>
                </xs:choice>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="aws_key">
        <xs:annotation>
            <xs:documentation>
                AWS Key Resource. Recursive complex type
            </xs:documentation>
        </xs:annotation>
    </xs:element>

    <xs:element name="aws_secret">
        <xs:annotation>
            <xs:documentation>
                AWS Secret Resource. Recursive complex type
            </xs:documentation>
        </xs:annotation>
    </xs:element>
</xs:schema>
